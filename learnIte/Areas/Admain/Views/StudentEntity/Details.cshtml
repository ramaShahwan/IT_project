@model ITE_Project.Dto.Student.StudentDto

<link href="~/css/site.css" rel="stylesheet" />
@{
    ViewData["Title"] = "Details";
}


<div class="whitebg border">
    <h2 class="text-info">Student</h2>
    <hr />
    <dl class="row">
        <dt class="col-sm-4" style="color: #730075; font-size: 1.3em; ">
            ID
        </dt>
        <dd class="col-sm-6">
            <div class="form-group row">
                <input asp-for="StudentId" class="form-control" style="color: #9B54A1; " readonly />
            </div>
        </dd>
        <dt class="col-sm-4" style="color: #730075; font-size: 1.3em; ">
            FirstName
        </dt>
        <dd class="col-sm-6">
            <div class="form-group row">
                <input asp-for="FirstName" class="form-control" style="color: #9B54A1; " readonly />
            </div>
        </dd>
        <dt class="col-sm-4" style="color: #730075; font-size: 1.3em; ">
            LastName
        </dt>
        <dd class="col-sm-6">
            <div class="form-group row">
                <input asp-for="LastName" class="form-control" style="color: #9B54A1; " readonly />
            </div>
        </dd>
        <dt class="col-sm-4" style="color: #730075; font-size: 1.3em; ">
            Country
        </dt>
        <dd class="col-sm-6">
            <div class="form-group row">
                <input asp-for="Country" class="form-control" style="color: #9B54A1; " readonly />
            </div>
        </dd>
        <dt class="col-sm-4" style="color: #730075; font-size: 1.3em; ">
            Address
        </dt>
        <dd class="col-sm-6">
            <div class="form-group row">
                <input asp-for="Address" class="form-control " style="color: #9B54A1;" readonly />
            </div>
        </dd>
        <dt class="col-sm-4" style="color: #730075; font-size: 1.3em; ">
            Phone
        </dt>
        <dd class="col-sm-6">
            <div class="form-group row">
                <input asp-for="Phone" class="form-control " style="color: #9B54A1;" readonly />
            </div>
        </dd>
        <dt class="col-sm-4" style="color: #730075; font-size: 1.3em; ">
            Average
        </dt>
        <dd class="col-sm-6">
            <div class="form-group row">
                <input asp-for="Average" class="form-control " style="color: #9B54A1;" readonly />
            </div>
        </dd>
        <dt class="col-sm-4" style="color: #730075; font-size: 1.3em; ">
            Birthday
        </dt>
        <dd class="col-sm-6">
            <div class="form-group row">
                <input asp-for="Birthday.Date" class="form-control " style="color: #9B54A1;" readonly />
            </div>
        </dd>
        <dt class="col-sm-4" style="color: #730075; font-size: 1.3em; ">
            Email
        </dt>
        <dd class="col-sm-6">
            <div class="form-group row">
                <input asp-for="user.Email" class="form-control " style="color: #9B54A1;" readonly />
            </div>
        </dd>
    </dl>
    <div class="form-group row">
        <div class="col-5 offset-2">
            <partial name="_EdaitAndBackToListPartial" model="@Model.StudentId" />
        </div>

    </div>
</div>
