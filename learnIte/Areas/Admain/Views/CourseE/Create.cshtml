            <label asp-for="Photo" class="col-form-label" style="color: #730075; font-size: 1.3em; "></label>
            <div class="custom-file">
                <input type="file" accept="image/*" asp-for="Photo" class="custom-file-input" />
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>
        </div>*@
                    </div>
                        <div class="modal-footer">
                            <partial name="_CreateAndBackToListButtonParial" />
                        </div>
</form>
            </div>
        </div>
    </div>
    
    @section Scripts{
        <partial name="_ValidationScriptsPartial" />
    }