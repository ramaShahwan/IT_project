@model List<ITE_Project.Dto.Course.CourseDto>
<link href="~/css/site.css" rel="stylesheet" />
@{
    ViewData["Title"] = "Index";
}

<div class="whitebg border">
    <div class="row">
        <div class="col-8">
            <h2 class="text-info"> Courses List</h2>
            <p class="text-primary">The Number of Courses Is: @Model.Count()   </p>
        </div>
        <div class="col-4 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <div>
        @if (Model.Count() == 0)
        {
            <p class="text-danger"> No Courses ..</p>
        }
        else
        {

    <table class="table table-striped border ">
        <tr class="table-secondary">
            <th style="color: #730075; font-size: 1.3em; ">Name  </th>
            <th style="color: #730075; font-size: 1.3em; ">Description</th>
            <th style="color: #730075; font-size: 1.3em; ">Language</th>
            <th style="color: #730075; font-size: 1.3em; ">Level</th>
            <th style="color: #730075; font-size: 1.3em; ">URL</th>
            @*<th style="color: #730075; font-size: 1.3em; ">Photo</th>*@

            <th></th>
        </tr>
        @foreach (var item in Model)
        {
           
            var mid = "myModal" + item.CourseId;
            <div id="@mid" class="modal fade">

                <div class="modal-dialog">
                    <div class="modal-content">
                        <form>
                            <div class="modal-header">
                                <h4 class="modal-title">Delete Course</h4>
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            </div>
                            <div class="modal-body">
                                <p>Are you sure you want to delete these Records?</p>
                            </div>
                            <div class="modal-footer">
                                <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                                <input asp-action="Delet" asp-route-id="@item.CourseId" type="submit" class="btn btn-danger" value="Delete">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <tr>
                <td> @Html.DisplayFor(m => item.CourseName)</td>
                <td> @Html.DisplayFor(m => item.corse_descraption)</td>
                <td> @Html.DisplayFor(m => item.Language_Name)</td>
                <td> @Html.DisplayFor(m => item.Level_Name)</td>
                <td> @Html.DisplayFor(m => item.URLCourse)</td>


                <td style="width:15px">
                    <partial name="_OpreationButtonPartial" model="item.CourseId" />
                </td>
            </tr>
        }
    </table>

        }
    </div>



</div>
