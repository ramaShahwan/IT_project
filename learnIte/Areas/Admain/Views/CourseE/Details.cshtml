@model ITE_Project.Dto.Course.CourseDto

<link href="~/css/site.css" rel="stylesheet" />
@{
    ViewData["Title"] = "Details";
}


<div class="whitebg border">
    <h2 class="text-info">Course</h2>
    <hr />
    <dl class="row">
        <dt class="col-sm-4" style="color: #730075; font-size: 1.3em; ">
            ID
        </dt>
        <dd class="col-sm-6">
            <div class="form-group row">
                <input asp-for="CourseId" class="form-control" style="color: #9B54A1; " readonly />
            </div>
        </dd>
        <dt class="col-sm-4" style="color: #730075; font-size: 1.3em; ">
            Name
        </dt>
        <dd class="col-sm-6">
            <div class="form-group row">
                <input asp-for="CourseName" class="form-control" style="color: #9B54A1; " readonly />
            </div>
        </dd>
        <dt class="col-sm-4" style="color: #730075; font-size: 1.3em; ">
            Description
        </dt>
        <dd class="col-sm-6">
            <div class="form-group row">
                <input asp-for="corse_descraption" class="form-control" style="color: #9B54A1; " readonly />
            </div>
        </dd>
        <dt class="col-sm-4" style="color: #730075; font-size: 1.3em; ">
            Language
        </dt>
        <dd class="col-sm-6">
            <div class="form-group row">
                <input asp-for="Language_Name" class="form-control " style="color: #9B54A1;" readonly />
            </div>
        </dd>
        <dt class="col-sm-4" style="color: #730075; font-size: 1.3em; ">
            Level
        </dt>
        <dd class="col-sm-6">
            <div class="form-group row">
                <input asp-for="Level_Name" class="form-control " style="color: #9B54A1;" readonly />
            </div>
        </dd>
        <dt class="col-sm-4" style="color: #730075; font-size: 1.3em; ">
            URL
        </dt>
        <dd class="col-sm-6">
            <div class="form-group row">
                <input asp-for="URLCourse" class="form-control " style="color: #9B54A1;" readonly />
            </div>
        </dd>
    </dl>
    <div class="form-group row">
        <div class="col-5 offset-2">
            <partial name="_EdaitAndBackToListPartial" model="@Model.CourseId" />
        </div>

    </div>
</div>
