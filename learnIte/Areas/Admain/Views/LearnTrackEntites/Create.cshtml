@model ITE_Project.Dto.Learn_Track.AddLearn_TrackDto
@using ITE_Project.Dto.Learn_Track
<link href="~/css/site.css" rel="stylesheet" />
<br />
<h2 class="text-info">Create Learn Track</h2>
<br />
<div id="addEmployeeModal" class="whitebg border">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="modal-header">
                    <h4 class="modal-title">Add Course</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="LearnTrackName" class="col-form-label" style="color: #730075; font-size: 1.3em; "></label>
                        <input asp-for="LearnTrackName" class="form-control" style="color: #9B54A1;" required />
                        <span asp-validation-for="LearnTrackName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="col-form-label" style="color: #730075; font-size: 1.3em; "></label>
                        <input asp-for="Description" class="form-control" style="color: #9B54A1;" required />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Specialize_Name" class="col-form-label" style="color: #730075; font-size: 1.3em; "></label>
                        <select asp-for="Specialize_Name" style="color: #9B54A1;" class="form-control" asp-items="Html.GetEnumSelectList<Specialize>()" required>
                        </select><option class="text-info">Choose The Language Of The Course </option>
                        <span asp-validation-for="Specialize_Name" class="text-danger"></span>
                    </div>
                   
                </div>
                <div class="modal-footer">
                    <partial name="_CreateAndBackToListButtonParial" />
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}