@model ITE_Project.Dto.Learn_Track.Learn_TrackDto
@using ITE_Project.Dto.Learn_Track
<link href="~/css/site.css" rel="stylesheet" />
@{
    ViewData["Title"] = "Edit";
}

<br />
<h2 class="text-info">Edit Learn Track</h2>
<br />
<form asp-action="Edit" method="post" class="col-12">
    <div class="whitebg border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @Html.HiddenFor(m => m.LearnTrackId)
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="LearnTrackName" class="col-form-label" style="color: #730075; font-size: 1.3em; "></label>
            </div>
            <div class="col-5">
                <input asp-for="LearnTrackName" class="form-control" style="color: #9B54A1;" required />
                <span asp-validation-for="LearnTrackName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Description" class="col-form-label" style="color: #730075; font-size: 1.3em; "></label>
            </div>
            <div class="col-5">
                <input asp-for="Description" style="color: #9B54A1;" class="form-control" required />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Specialize_Name" class="col-form-label" style="color: #730075; font-size: 1.3em; "></label>
            </div>
            <div class="col-5">
                <select asp-for="Specialize_Name" class="form-control" style="color: #9B54A1;" asp-items="Html.GetEnumSelectList<Specialize>()" required>
                </select><option class="text-info"> Choose The Specialize Of The Learn Track</option>
                <span asp-validation-for="Specialize_Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_UpdateAndBackToListButtonParital" />
            </div>

        </div>

    </div>


</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}



