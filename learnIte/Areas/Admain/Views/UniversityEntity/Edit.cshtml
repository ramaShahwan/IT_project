@model ITE_Project.Dto.University.UniversityDto

<link href="~/css/site.css" rel="stylesheet" />
@{
    ViewData["Title"] = "Edit";
}

<br />
<h2 class="text-info">Edit University</h2>
<br />
<form asp-action="Edit" method="post" class="col-12">
    <div class="whitebg border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @Html.HiddenFor(m => m.UniversityId)
        @Html.HiddenFor(m => m.UserId)
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="University_Name" class="col-form-label" style="color: #730075; font-size: 1.3em; "></label>
            </div>
            <div class="col-5">
                <input asp-for="University_Name" class="form-control" style="color: #9B54A1;" required />
                <span asp-validation-for="University_Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Country" class="col-form-label" style="color: #730075; font-size: 1.3em; "></label>
            </div>
            <div class="col-5">
                <input asp-for="Country" class="form-control" style="color: #9B54A1;" required />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Address" class="col-form-label" style="color: #730075; font-size: 1.3em; "></label>
            </div>
            <div class="col-5">
                <input asp-for="Address" class="form-control" style="color: #9B54A1;" required />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Phone" class="col-form-label" style="color: #730075; font-size: 1.3em; "></label>
            </div>
            <div class="col-5">
                <input asp-for="Phone" style="color: #9B54A1;" class="form-control" required />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_UpdateAndBackToListButtonParital" />
            </div>

        </div>

    </div>


</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}



