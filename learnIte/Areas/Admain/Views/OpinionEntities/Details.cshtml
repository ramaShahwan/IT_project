@model ITE_Project.Dto.Opinion.OpinionDto

<link href="~/css/site.css" rel="stylesheet" />
@{
    ViewData["Title"] = "Details";
}


<div class="whitebg border" >
    <h2 class="text-info">Opinion Entity</h2>
    <hr />
    <dl class="row">
        <dt class="col-sm-4" style="color: #730075; font-size: 1.3em; ">
            ID
        </dt>
        <dd class="col-sm-6">
            <div class="form-group row">
                <input asp-for="OpinionsId" class="form-control"  style="color: #9B54A1; " readonly/>
            </div>
        </dd>
        <dt class="col-sm-4 " style="color: #730075; font-size: 1.3em; ">
            Name
        </dt>
        <dd class="col-sm-6">
            <div class="form-group row">
                <input asp-for="Name" class="form-control" style="color: #9B54A1; " readonly />
            </div>
        </dd>
        <dt class="col-sm-4" style="color: #730075; font-size: 1.3em; ">
            Email
        </dt>
        <dd class="col-sm-6">
            <div class="form-group row">
                <input asp-for="Email" class="form-control"  style="color: #9B54A1; " readonly />
            </div>
        </dd>
        <dt class="col-sm-4"style="color: #730075; font-size: 1.3em; ">
            Message
        </dt>
        <dd class="col-sm-6">
            <div class="form-group row">
                <textarea asp-for="Message" class="form-control" style="color: #9B54A1; " readonly></textarea>
            </div>
        </dd>
    </dl>
    <div class="form-group row">
        <div class="col-5 offset-2">
            <partial name="_EdaitAndBackToListPartial" model="@Model.OpinionsId " />
        </div>

    </div>
</div>
