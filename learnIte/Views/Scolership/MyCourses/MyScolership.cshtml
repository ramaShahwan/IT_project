@model List<ITE_Project.Dto.Std_Scholarship.Std_ScholarshipDto>
<link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
<link href="~/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
<link href="~/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
<link rel="stylesheet" type="text/css" href="~/styles/about.css">
<link rel="stylesheet" type="text/css" href="~/styles/about_responsive.css">
<body>
  
    <section id="portfolio" class="portfolio section-bg">
        <div class="container" style="margin:167px;">
            @if (Model.Count() == 0)
            {
                <partial name="_NotificatioPartial" />
                <p class="text-danger"> You have not registered for any of the scholarships</p>
            }

            else
            {


                <div class="m-3">
                    <p class="text-dark"> The number of scholarships you have registered for is <strong style="color:#8a84e2ff;">@Model.Count</strong></p>
                </div>

                <partial name="_NotificatioPartial" />
                <div class="row portfolio-container" data-aos="fade-up">
                    @foreach (var item in Model)
                    {<div class="col-lg-4 col-md-6">
                         <div class="course">
                             @{ var tm = "#myModal" + item.Std_ScholarshipId;
                                var mid = "myModal" + item.Std_ScholarshipId;}
                             <div class="course_image"><img src="~/images/course_8.jpg" alt=""></div>
                             <div class="course_body">

                                 @if (item.Taken == true)
                                 {


                                     <div class="course_author_name">
                                         <strong>congratulation to you</strong><br />
                                         You have been accepted by the university @item.scholarship.University.University_Name for this scholarship, please check your email and contact the university
                                         <i class="fas fa-check" style="color:forestgreen"></i>
                                     </div>

                                 }
                                 else
                                 {
                                   
                                     <a href="#deleteEmployeeModal" class="delete" data-target="@tm" data-toggle="modal"><i style="color:red ;" class="bx bxs-trash"></i></a>
                                     @*<a asp-action="Delete" asp-route-id="@item.Std_ScholarshipId" data-gallery="portfolioGallery" class="btn border-dark confiermDelation " title="Delete"><i style="color:red ;" class="bx bxs-trash"></i></a>*@

                                 }
                                 <div id="@mid" class="modal fade">

                                     <div class="modal-dialog">
                                         <div class="modal-content">
                                             <form>
                                                 <div class="modal-header">
                                                     <h4 class="modal-title">Delete Scholarship</h4>
                                                     <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                 </div>
                                                 <div class="modal-body">
                                                     <p>Are you sure you want to delete these Records?</p>
                                                 </div>
                                                 <div class="modal-footer">
                                                     <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                                                     <input asp-action="Delete" asp-route-id="@item.Std_ScholarshipId" type="submit" class="btn btn-danger" value="Delete">
                                                 </div>
                                             </form>
                                         </div>
                                     </div>
                                 </div>
                                 <div class="course_header d-flex flex-row align-items-center justify-content-start">
                                     <div class="course_price ml-auto"> <span>@item.scholarship.University.University_Name</span></div>
                                 </div>
                                 <div class="course_title"><h3><a href="courses.html">@item.scholarship.Specialize_Name</a></h3></div>
                                 <div class="course_text">@item.scholarship.Description</div>
                                 <div class="course_text">@item.scholarship.Level</div>
                                 <div class="course_text">@item.scholarship.Specialize_Name</div>
                                 <div class="course_footer d-flex align-items-center justify-content-start">
                                     <div class="course_author_name"><a>@item.scholarship.StartDate</a></div>
                                     <div class="course_author_name"><a>@item.Date_Log_Scholarship</a></div>
                                     <div class="course_sales ml-auto"><span>@item.scholarship.EndDate</span></div>
                                 </div>
                             </div>
                         </div>
                        </div>
                    }
                </div>
            }

        </div>
    </section>
</body>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/about.js"></script>
}


