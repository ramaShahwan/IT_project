    <!-- About -->

    <div class="about">
        <div class="container">
            <div class="row about_row row-lg-eq-height">
                <div class="col-lg-6">
                    <div class="about_content">
                        <div class="about_title">Our Platform's main goal</div>
                        <div class="about_text">
                            <p>
                                Our site makes you able to self-learning remotely for any path in the computer world in various disciplines from artificial intelligence and software to network science, it facilitates the way for you and shows you the steps to start making your career path
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="about_image"><img src="~/images/about_1.jpg" alt=""></div>
                </div>
            </div>
            <div class="row about_row row-lg-eq-height">
                <div class="col-lg-6 order-lg-1 order-2">
                    <div class="about_image"><img src="~/images/about_1.jpg" alt=""></div>
                </div>
                <div class="col-lg-6 order-lg-2 order-1">
                    <div class="about_content">
                        <div class="about_title">iLearn's Vision</div>
                        <div class="about_text">
                            <p>
                                Our main goal at iLEARN is to encourage students to self-educate by making easy and clear action plans to make the self-education journey enjoyable so that the student can find everything he needs in one place
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <!-- ======= Portfolio Section ======= -->

    <section id="portfolio" class="portfolio section-bg">
        <div class="container">

            <div class="section-title" data-aos="fade-up">
                <h2>Educational paths</h2>
                <p>
                    Choose the specialization you want to see the educational paths for
                </p>
            </div>

            <div class="row" data-aos="fade-up">
                <div class="col-lg-12 d-flex justify-content-center">
                    <ul id="portfolio-flters">
                     <li data-filter="*" class="filter-active"> <a asp-action="Index"> All</a></li>
                     <li data-filter=".filter-app"><a asp-action="Search_For_LearnTrack" asp-route-id="0">sowfetware</a></li>
                     <li data-filter=".filter-card"><a asp-action="Search_For_LearnTrack" asp-route-id="2">AI</a></li>
                     <li data-filter=".filter-web"><a asp-action="Search_For_LearnTrack" asp-route-id="1">Network</a></li>
                                
                    </ul>
                </div>
            </div>
            <div class="row portfolio-container" data-aos="fade-up">
                @foreach (var item in Model)
                {



                    <div class="col-lg-4 col-md-6 portfolio-item filter-app">
                        <div class="portfolio-wrap">
                            <div class="course">
                                <div class="course_image"><img src="~/images/@item.PhotoLearnTrack" alt=""></div>
                                <div class="course_body">
                                    <div class="course_header d-flex flex-row align-items-center justify-content-start">
                                        <div class="course_title"><h3>@item.LearnTrackName</h3></div>
                                    </div>

                                    <div class="course_text">@item.Description</div>
                                    <div class="course_sales ml-auto"><span>Specialize:@item.Specialize_Name</span></div>
                                   
                                </div>
                            </div>
                            <div class="portfolio-info">
                                <h4>Join now</h4>
                                <p>Track details</p>
                                <div class="portfolio-links">
                                    @if (User.IsInRole(SD.StudentUser))
                                    {
                                        <form asp-action="AddToUser" asp-controller="LTDatiles" asp-route-id="@item.LearnTrackId" method="post" class="">
                                            <button><i class="bx bx-plus"></i></button>
                                        </form>
                                    }
                                        <a asp-controller="LTDatiles" asp-action="Index" asp-route-id="@item.LearnTrackId" title="More Details"><i class="bx bx-link"></i></a>
                                    </div>
                            </div>
                        </div>
                       
                    </div> }
                <div class="col-lg-4 col-md-6 portfolio-item filter-web">
