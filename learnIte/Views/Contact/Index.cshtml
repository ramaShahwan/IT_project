@model ITE_Project.Dto.Opinion.AddOpinionDto
<html lang="en">
<head>
   
    <link rel="stylesheet" type="text/css" href="~/styles/bootstrap4/bootstrap.min.css">
    <link href="~/plugins/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="~/plugins/video-js/video-js.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" type="text/css" href="~/styles/contact.css">
    <link rel="stylesheet" type="text/css" href="~/styles/contact_responsive.css">
</head>
<body>
    <!-- Home -->

    <div class="home">
        <div class="home_background parallax_background parallax-window" data-parallax="scroll" data-image-src="../images/contact.jpg" data-speed="0.8"></div>
        <div class="home_container">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <div class="home_content text-center">
                            <div class="home_title">Contact</div>
                            <div class="breadcrumbs">
                                <ul>
                                    <li><a href="/Home/Index">Home</a></li>
                                    <li>Contact</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Contact -->

    <div class="contact text-center">
        <div class="container-fluid">
            <div class="row row-xl-eq-height  text-center">
                <!-- Contact Content -->
                <div class="col-xl-12 ">
                    <div class="contact_content m-5">
                        <div class="row">
                            <div class="col-xl-6">
                                <div class="contact_about">
                                    <div class="logo_container">
                                        <a href="#">
                                            <div class="logo_content d-flex flex-row align-items-end justify-content-start">
                                                <div class="logo_img "><img src="images/logo-(iLearn2).png" alt="logo" width="60" ></div>
                                              
                                            </div>
                                        </a>
                                    </div>
                                    <div class="contact_about_text">
                                        <p>You can contact our website via this page by filling in the following data. You can contact us in order to evaluate the site or any problem and we will respond as soon as possible</p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-xl-6">
                                <div class="contact_info_container">
                                    <div class="contact_info_main_title text-center">Contact Us</div>
                                    <div class="contact_info">
                                        <div class="contact_info_item">
                                            <div class="contact_info_title">Address:</div>
                                            <div class="contact_info_line">1481 Aleppo Syria, CA 93424</div>
                                        </div>
                                        <div class="contact_info_item">
                                            <div class="contact_info_title">Phone:</div>
                                            <div class="contact_info_line">+53 345 7953 32453</div>
                                        </div>
                                        <div class="contact_info_item">
                                            <div class="contact_info_title">Email:</div>
                                            <div class="contact_info_line">ilearnacademies@gmail.com</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="contact_form_container">
                            <form asp-action="Index" method="post" id="contact_form" class="contact_form">
                                <div>
                                    <div class="row">
                                        <div class="col-lg-6 contact_name_col">
                                            <input type="text" asp-for="Name" class="contact_input" placeholder="Name" required="required">
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                        <div class="col-lg-6">
                                            <input type="email"  asp-for="Email" class="contact_input" placeholder="E-mail" required="required">
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div>
                                    <textarea asp-for="Message" class="contact_input contact_textarea" placeholder="Message"></textarea>
                                    <span asp-validation-for="Message" class="text-danger"></span>
                                </div>
                                <button type="submit" class="contact_button"><span>send message</span><span class="button_arrow"><i class="fa fa-angle-right" aria-hidden="true"></i></span></button>
                            </form>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>


    <script src="~/js/jquery-3.2.1.min.js"></script>
    <script src="~/styles/bootstrap4/popper.js"></script>
    <script src="~/styles/bootstrap4/bootstrap.min.js"></script>
    <script src="~/plugins/easing/easing.js"></script>
    <script src="~/plugins/parallax-js-master/parallax.min.js"></script>
    <script src="~/js/contact.js"></script>
</body>
</html>
@section Scripts{
        <partial name="_ValidationScriptsPartial" />
    }